<.form method="delete" action="/logout">
  <button
    type="submit"
    class="mt-4 inline-block px-6 py-2 bg-red-600 text-white rounded hover:bg-red-500"
  >
    Logout
  </button>
</.form>

<div class="max-w-2xl mx-auto mt-10">
  <h1 class="text-2xl font-bold mb-4">Financial Agent Chat</h1>

  <form phx-submit="submit">
    <input
      type="text"
      name="query"
      value={@query}
      placeholder="Ask me anything..."
      class="w-full p-2 border rounded mb-2"
    />
    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded">Send</button>
  </form>

  <div class="mt-4">
    <h2 class="text-lg font-semibold">Response:</h2>
    <p>{@response}</p>
  </div>
</div>
